<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnvioActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:text="Sigue tu Orden"
        android:textColor="#EA2242"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="410dp"
        android:layout_height="621dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="-2dp"
        tools:ignore="MissingConstraints">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/custom_progress_bar" />

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="281dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUno"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/comida" />

            <ImageView
                android:id="@+id/imgDno"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="110dp"
                app:srcCompat="@drawable/coche" />

            <ImageView
                android:id="@+id/imgTno"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="110dp"
                app:srcCompat="@drawable/listo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="230dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtPrepa"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:text="Preparando" />
            <TextView
                android:id="@+id/txtProce"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:layout_marginStart="80dp"
                android:text="En Proceso" />
            <TextView
                android:id="@+id/txtListo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:textStyle="bold"
                android:layout_marginStart="105dp"
                android:text="Listo!" />


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="246dp"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="84dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="380dp"
            app:srcCompat="@drawable/moto" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>